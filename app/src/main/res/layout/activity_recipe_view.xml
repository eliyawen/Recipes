<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeViewActivity"
    android:id="@+id/recipe_show_big_ll">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recipe_show_scroll_view"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/recipe_show_small_ll"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:text="שם המתכון"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="@drawable/border"
            android:id="@+id/recipe_name_tv"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="זמן ההכנה-"
                android:textSize="15dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:layout_gravity="right"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/time_tv"
            android:text="זמן ההכנה"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="@drawable/border"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="רמת קושי-"
                android:textSize="15dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/difficulty_tv"
            android:text="רמת קושי"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="@drawable/border"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="רכיבים-"
                android:textSize="15dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/ingredients_tv"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="זה הרכיבים"
            android:background="@drawable/border"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="אופן ההכנה-"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/preparation_method_tv"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="איך מכינים"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="@drawable/border"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_image_tv"
                android:layout_marginTop="20dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הוסף מתכון"
                android:layout_gravity="left"
                android:id="@+id/adding_recipe_to_me_btn"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>